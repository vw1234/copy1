{% extends 'NwpAssessmentBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - Event Paper {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h3 class="title">Event Paper</h3>

<form class="form-horizontal">
    <fieldset>        
        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.id }}</span></div>
        </div>        
        <div class="control-group">
            <label class="control-label">Event</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.event }}</span></div>
        </div> 
        <div class="control-group">
            <label class="control-label">Grade Level</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.scoringItem.gradeLevel }}</span></div>
        </div> 
        <div class="control-group">
            <label class="control-label">Component</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.component }}</span></div>
        </div>
        <div class="control-group">
            <label class="control-label">Paper Id</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.scoringItem }}</span></div>
        </div>        
           
            <div class="control-group">
            <label class="control-label">Student Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.scoringItem.studentId }}</span>            </div>
        </div>        
             <div class="control-group">
            <label class="control-label">Administration Time</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.scoringItem.administrationTime }}</span>            </div>
        </div> 
             <div class="control-group">
            <label class="control-label">School Year</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.scoringItem.year }}</span>            </div>
        </div>  
             <div class="control-group">
            <label class="control-label">Project</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.scoringItem.project }}</span>            </div>
        </div>   
             <div class="control-group">
            <label class="control-label">Prompt</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.scoringItem.prompt }}</span>            </div>
        </div>   
             <div class="control-group">
            <label class="control-label">Grade Level</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.scoringItem.gradeLevel }}</span>            </div>
        </div>   
             <div class="control-group">
            <label class="control-label">Date Updated</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.dateUpdated|date('Y-m-d H:i:s') }}</span></div>
        </div> 
            <div class="control-group">
            <label class="control-label">Original Filename</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.scoringItem.originalFileName }}</span>            </div>
        </div>   
         <div class="control-group">
            <label class="control-label">Date File Uploaded</label>
            {% if (entity.scoringItem.dateUploaded) %}
            <div class="controls"> <a href="{{ path('projectsite_scoringitem_download', { 'id': entity.scoringItem.id }) }}" target="blank">{{entity.scoringItem.dateUploaded|date('Y-m-d H:i:s')}} </a></div>
        {% else %}
            <div class="controls">N/A</div>
        {% endif %}
        </div>    
        <div class="control-group"> 
             <label class="control-label">Attached File</label> 
        {% if ((entity.scoringItem.originalFileName) and (entity.scoringItem.dateUploaded)) %}
            <div class="controls"> <a href="{{ path('projectsite_scoringitem_download', { 'id': entity.scoringItem.id }) }}" target="blank">{{entity.scoringItem.originalFileName}}.{{entity.scoringItem.filetype}} </a></div>
        {% else %}
            <div class="controls">N/A</div>
        {% endif %}
        </div> 
        </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('projectsite_eventscoringitem') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
</div>
{% endblock %}